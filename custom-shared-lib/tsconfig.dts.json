{
  "extends": "./tsconfig.tsup.json",
  "compilerOptions": {
    "isolatedDeclarations": false,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
