# =============================================================================
# HEALTH CHECKER API ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to runnable-health-checker-api.env and configure your values
# =============================================================================

# Service Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=4240
SERVICE_NAME=runnable-health-checker-api

# Application Identity
APP_SLUG=__APP_SLUG__
APP_NAME=__APP_NAME__

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=30000
HEALTH_CHECK_TIMEOUT_MS=5000

# Services to Monitor
BACKEND_API_URL=http://localhost:4241
FRONTEND_MAIN_URL=http://localhost:4242
FRONTEND_B2C_URL=http://localhost:4243
FRONTEND_ADMIN_URL=http://localhost:4244

# Logging
LOG_LEVEL=info
WILDO_FORMATTED_CONSOLE_ERRORS=true

