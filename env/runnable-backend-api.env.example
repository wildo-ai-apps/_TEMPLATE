# =============================================================================
# BACKEND API ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to runnable-backend-api.env and configure your values
# =============================================================================

# Service Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=4241
SERVICE_NAME=runnable-backend-api

# Application Identity
APPLICATION_ID=__APPLICATION_ID__
APP_SLUG=__APP_SLUG__
APP_NAME=__APP_NAME__
APPLICATION_ENV=development

# Database Configuration - MongoDB
# These values are populated by the platform during app initialization
DATABASE_URL=__DATABASE_URL__
MONGO_USERNAME=__MONGO_USERNAME__
MONGO_PASSWORD=__MONGO_PASSWORD__

# Redis Configuration
REDIS_URL=redis://host.docker.internal:6379
REDIS_USERNAME=__REDIS_USERNAME__
REDIS_PASSWORD=__REDIS_PASSWORD__
REDIS_SESSION_URL=redis://host.docker.internal:6379/1
REDIS_CACHE_URL=redis://host.docker.internal:6379/2

# RabbitMQ Configuration
RABBITMQ_URL=amqp://host.docker.internal:5672
RABBITMQ_USERNAME=__RABBITMQ_USERNAME__
RABBITMQ_PASSWORD=__RABBITMQ_PASSWORD__

# JWT Configuration
JWT_SECRET=__JWT_SECRET__
JWT_REFRESH_SECRET=__JWT_REFRESH_SECRET__
JWT_PRIVATE_KEY=__JWT_PRIVATE_KEY__
JWT_PUBLIC_KEY=__JWT_PUBLIC_KEY__

# Session Configuration
SESSION_SECRET=__SESSION_SECRET__
SESSION_ENCRYPTION_KEY=__SESSION_ENCRYPTION_KEY__
SESSION_MAX_AGE=86400000

# Platform Configuration
PLATFORM_APPLICATION_PRIMARY_SECRET=__PLATFORM_PRIMARY_SECRET__
PLATFORM_ADMINISTRATION_URL=http://host.docker.internal:5151

# CORS Configuration
CORS_ORIGIN=http://localhost:4242,http://localhost:4243,http://localhost:4244
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
WILDO_FORMATTED_CONSOLE_ERRORS=true

# Development Settings
ENABLE_DEBUG_ROUTES=true
ENABLE_SWAGGER_UI=true
SWAGGER_UI_PATH=/api/docs

