# =============================================================================
# FRONTEND B2C APP ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to runnable-frontend-b2c-app.env and configure your values
# =============================================================================

# Service Configuration
NODE_ENV=development
PORT=4243
VITE_PORT=4243
# HMR client port for Docker: set to external port (internal + PORT_OFFSET)
VITE_HMR_CLIENT_PORT=4243

# Application Identity
VITE_APP_SLUG=__APP_SLUG__
VITE_APP_NAME=__APP_NAME__

# API Configuration
VITE_API_BASE_URL=http://localhost:4241
VITE_API_BASE_PATH=/api/v1

# WebSocket Configuration (if applicable)
VITE_WS_URL=ws://localhost:4241

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_DEVTOOLS=true

