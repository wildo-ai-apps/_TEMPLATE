{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
            "module": "CommonJS",
      "moduleResolution": "Node",
      "outDir": "dist/cjs",
      "rootDir": "src",
      "sourceMap": true,
      "declarationMap": true,
      "noEmit": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}