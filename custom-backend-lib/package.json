{
  "name": "@wildo-ai/custom-backend-lib",
  "version": "1.0.0",
  "description": "Custom Node.js backend library wildo.ai applications",
  "author": "Wildo AI",
  "license": "UNLICENSED",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build-custom": "pnpm clean-custom && pnpm build:js && pnpm build:types",
    "build:js": "tsup",
    "build:types": "node ../scripts/generate-dts.mjs custom-backend-lib",
    "clean-custom": "rimraf dist",
    "dev-custom": "concurrently -n js,types -c cyan,yellow \"tsup --watch src --watch ../custom-shared-lib/dist --watch ../../../wildo-ai/framework/saas-backend-lib/dist\" \"node ../scripts/generate-dts.mjs custom-backend-lib --watch\"",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@wildo-ai/custom-shared-lib": "workspace:*",
    "@wildo-ai/saas-backend-lib": "workspace:*",
    "@wildo-ai/saas-models": "workspace:*",
    "@wildo-ai/external-connectors": "workspace:*",
    "@wildo-ai/external-connectors-models": "workspace:*",
    "@wildo-ai/zod-decorators": "workspace:*",
    "express": "*"
  },
  "devDependencies": {
    "@swc/core": "^1",
    "@types/node": "*",
    "chokidar": "^3.5.3",
    "concurrently": "*",
    "oxc-transform": "*",
    "rimraf": "*",
    "tsup": "*",
    "typescript": "*"
  },
  "peerDependencies": {
    "big.js": "*",
    "date-fns": "*",
    "lodash": "*",
    "ufo": "*",
    "inversify": "*",
    "zod": "*",
    "express": "*"
  }
}
